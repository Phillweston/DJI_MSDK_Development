<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/default_blue" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topRightRadius="5dp"
                android:topLeftRadius="5dp" />
            <padding
                android:bottom="@dimen/monitor_font_padding"
                android:left="@dimen/monitor_font_padding"
                android:right="@dimen/monitor_font_padding"
                android:top="@dimen/monitor_font_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/loadtask_tv_normal" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topRightRadius="5dp"
                android:topLeftRadius="5dp" />
            <padding
                android:bottom="@dimen/monitor_font_padding"
                android:left="@dimen/monitor_font_padding"
                android:right="@dimen/monitor_font_padding"
                android:top="@dimen/monitor_font_padding" />
        </shape>
    </item>

</selector>