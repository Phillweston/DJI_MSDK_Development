<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#192132"/>
            <corners android:radius="18dp"/>
            <stroke android:width="1.5dp" android:color="@color/default_red"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <corners android:radius="18dp"/>
            <stroke android:width="1.5dp" android:color="@color/default_gray"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <corners android:radius="18dp"/>
            <stroke android:width="1.5dp" android:color="@color/default_red_light"/>
        </shape>
    </item>

</selector>