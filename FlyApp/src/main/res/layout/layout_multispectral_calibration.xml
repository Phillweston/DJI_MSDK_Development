<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tv_step_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/gray"
        android:text="@string/multispectral_calibration_step_1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_multi_rotor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/multispectral_calibration_multi_rotor_1"/>

        <ImageView
            android:id="@+id/iv_fixed_wing"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/multispectral_calibration_fixed_wing_1"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>