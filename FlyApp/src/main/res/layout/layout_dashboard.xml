<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dashboard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0.5"
    android:background="#1a1d23"
    android:orientation="vertical"
    android:padding="2pt">

        <TextView
            android:id="@+id/tv_photo_info"
            android:layout_width="@dimen/dashboard_widget_width2"
            android:layout_height="wrap_content"
            android:padding="4pt"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dashboard_distance"
                android:layout_width="@dimen/dashboard_widget_width"
                android:layout_height="@dimen/dashboard_widget_height"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="距离: N/A 米"
                android:textColor="@color/white"
                android:textSize="@dimen/dashboard_widget_text_size" />

            <TextView
                android:id="@+id/dashboard_altitude"
                android:layout_width="@dimen/dashboard_widget_width"
                android:layout_height="@dimen/dashboard_widget_height"
                android:layout_toRightOf="@id/dashboard_distance"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="高度: N/A 米"
                android:textColor="@color/white"
                android:textSize="@dimen/dashboard_widget_text_size" />

            <TextView
                android:id="@+id/dashboard_rtk"
                android:layout_width="@dimen/dashboard_widget_width"
                android:layout_height="@dimen/dashboard_widget_height"
                android:layout_below="@id/dashboard_distance"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="RTK: 未开启"
                android:textColor="@color/white"
                android:textSize="@dimen/dashboard_widget_text_size" />

            <TextView
                android:id="@+id/dashboard_fly_time"
                android:layout_width="@dimen/dashboard_widget_width"
                android:layout_height="@dimen/dashboard_widget_height"
                android:layout_below="@id/dashboard_distance"
                android:layout_toRightOf="@id/dashboard_rtk"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="时长: N/A 分钟"
                android:textColor="@color/white"
                android:textSize="@dimen/dashboard_widget_text_size" />

        </RelativeLayout>

</LinearLayout>