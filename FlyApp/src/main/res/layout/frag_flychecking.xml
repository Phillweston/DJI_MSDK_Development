<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/menu_item_selected"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="飞行安全检查"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_medium" />

            <ImageButton
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_close_loadtask_selector" />
        </RelativeLayout>

        <View
            android:id="@+id/v_sep"
            style="@style/line_hor_gray"
            android:layout_marginBottom="3dip"
            android:background="@color/dialog_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3D414D"
                android:paddingLeft="30dp"
                android:paddingTop="8dp"
                android:paddingRight="30dp">

                <com.ew.autofly.widgets.controls.ExtImageButton
                    android:id="@+id/btn_connect_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true" />

                <com.ew.autofly.widgets.controls.ExtImageButton
                    android:id="@+id/btn_gs_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3D414D"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <com.ew.autofly.widgets.controls.ExtImageButton
                    android:id="@+id/btn_gps_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true" />

                <com.ew.autofly.widgets.controls.ExtImageButton
                    android:id="@+id/btn_location_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3D414D"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <com.ew.autofly.widgets.controls.ExtImageButton
                    android:id="@+id/btn_home_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true" />

                <com.ew.autofly.widgets.controls.ExtImageButton
                    android:id="@+id/btn_control_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3D414D"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <com.ew.autofly.widgets.controls.ExtImageButton
                    android:id="@+id/btn_sms_storage_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true" />

                <com.ew.autofly.widgets.controls.ExtImageButton
                    android:id="@+id/btn_photo_storage_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3D414D"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="8dp">

                <com.ew.autofly.widgets.controls.ExtImageButton
                    android:id="@+id/btn_battery_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true" />

                <com.ew.autofly.widgets.controls.ExtImageButton
                    android:id="@+id/btn_task_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#1A1D22">

            <com.ew.autofly.widgets.SlideFlightView
                android:id="@+id/slidetoflight"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>