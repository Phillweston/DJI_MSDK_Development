<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_dialog_list_item"
    android:gravity="center_vertical"
    android:padding="@dimen/padding_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_check_tower"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="塔号："
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_font_micro"/>

        <TextView
            android:id="@+id/tv_tower_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="110kvd2"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_font_micro"/>

        <TextView
            android:id="@+id/tv_tower_linename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_font_micro"/>

    </LinearLayout>

</RelativeLayout>