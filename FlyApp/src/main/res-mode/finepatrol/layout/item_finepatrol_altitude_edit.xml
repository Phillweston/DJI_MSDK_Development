<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item_changeable_altitude_stroke"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal">

    <TextView
        android:id="@+id/tv_point_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/default_blue"
        android:textSize="14sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/ic_tower_type"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/bg_finepatrol_execute"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ic_tower_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_enter_altitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fdfdfd"
                    android:textSize="16sp"
                    android:text="进:"/>

                <EditText
                    android:id="@+id/et_enter_altitude"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:textColor="#1a1d23"
                    android:textSize="16sp"
                    android:imeOptions="actionNext|flagNoExtractUi"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_exit_altitude"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fdfdfd"
                    android:textSize="16sp"
                    android:text="出:"/>

                <EditText
                    android:id="@+id/et_exit_altitude"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:textColor="#1a1d23"
                    android:textSize="16sp"
                    android:imeOptions="actionNext|flagNoExtractUi"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_waypoint_altitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="end"/>

</LinearLayout>