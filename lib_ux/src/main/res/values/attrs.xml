    <declare-styleable name="Ux_ProgressButton">
        <attr name="pb_radius" format="float"/>
        <attr name="pb_backgroud_color" format="color"/>
        <attr name="pb_backgroud_second_color" format="color"/>
        <attr name="pb_text_color" format="color"/>
        <attr name="pb_text_covercolor" format="color"/>
        <attr name="pb_backgroud_strokeWidth" format="dimension"/>
        <attr name="pb_text_normal" format="string"/>
        <attr name="pb_text_downing" format="string"/>
        <attr name="pb_text_pause" format="string"/>
        <attr name="pb_text_finish" format="string"/>
        <attr name="pb_animation_duration" format="integer"/>
    </declare-styleable>


    <declare-styleable name="Ux_ProgressRing">
        <attr name="pr_heartColor" format="color" />
        <attr name="pr_heartClickedColor" format="color" />
        <attr name="pr_skinStartColor" format="color" />
        <attr name="pr_skinEndColor" format="color" />
        <attr name="pr_skinDepth" format="integer" />
        <attr name="pr_percent" format="float" />
        <attr name="pr_duration" format="integer" />
        <attr name="pr_centerTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="Ux_ExpandableBreathingButton">
        <attr name="ebbButtonText" format="string" />
        <attr name="ebbButtonTextSize" format="dimension" />
        <attr name="ebbButtonTextColor" format="color" />
        <attr name="ebbItemTextSize" format="dimension" />
        <attr name="ebbItemText" format="string" /><!--格式要求：xx|xx|xx 以“|”分隔-->
        <attr name="ebbItemTextColor" format="color" />
        <attr name="ebbInnerCircleColor" format="color" />
        <attr name="ebbRectBackgroundColor" format="color" />
    </declare-styleable>

    <!-- 可清空编辑框属性 -->
    <declare-styleable name="ETWithDelete">
        <attr name="delSrc" format="reference" />
    </declare-styleable>
    <declare-styleable name="DottedLine">
        <attr name="dotColor" format="color" />
    </declare-styleable>

    <declare-styleable name="Ux_SmoothCheckBox">
        <attr name="duration" format="integer"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="color_tick" format="color"/>
        <attr name="color_checked" format="color"/>
        <attr name="color_unchecked" format="color"/>
        <attr name="color_unchecked_stroke" format="color"/>
    </declare-styleable>

</resources>